<div class="spacer"></div>

<h1>Log in</h1>

<%= form_tag sessions_path do %>
<div class="login-container">
  <div class="field">
  <%= label_tag :email %> </br>
  <%= text_field_tag :email %></br>
  </div>
  <div class="field">
  <%= label_tag :password %> </br>
  <%= password_field_tag :password %></br>
  </div>
  <div class="button">
    <div class="actions">
    <%= submit_tag "Log in", :class => 'actions'%> </br>
    </div>
  </div>
</div>

  <% end %>
