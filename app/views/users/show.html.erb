<div class="show-page-container">
  <div class="spacer"></div>

  <h1>User Profile Page</h1>

  <p class="hello-msg">Hello <%=@user.name.capitalize %>!</p>

  <div class="user-info-container">
    <h3><span class="project-title"><%=@user.name.capitalize %>'s Projects:<span></h3>


      <% @user.projects.each do |project| %>
      <div class="user-projects">
        <p> <%= project.name %> </br>
            <%= project.description %> </br>
            <b>Goal:</b> $<%= project.goal %> </br>
            <b>Deadline:</b> <%= project.deadline %> </br>
        </p>
        </div>
      <% end %>

      <br>
      <br>
    <div class='new-project-link2'>
      <%= link_to "Start a Project", new_project_url %>
    </div>
  </div>




  <div class="pledges-container">
    <h4>My Pledges:</h4>

    <% @user.pledges.each do |pledge| %>
        <p> <%=  link_to pledge.project.name, project_path(pledge.project.id) %>
        | $<%= pledge.amount %> | <%= pledge.reward.name %>
        </p>
      <% end %>
  </div>



</div>
